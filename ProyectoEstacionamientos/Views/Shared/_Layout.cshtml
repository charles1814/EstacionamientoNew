<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EstacionamientoSoft</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Estacionamientos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>

        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Inicio", "Index", "Home", new { area=""}, new {@class="nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Planes", "About", "Home", new { area = "" }, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })

                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                @Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "btn btn-outline-success my-2 my-sm-0" })
            </form>
        </div>
        
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="card-footer" style="text-align:center">
            <p>&copy; @DateTime.Now.Year - Proyecto Estacionamientos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
